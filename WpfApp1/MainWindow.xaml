<Window x:Class="WpfApp1.MainWindow" x:Name="Application"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:WpfApp1"
    mc:Ignorable="d"
    Title="Pizzeria Management Application" Height="1000" Width="1800">
    
    <Window.Resources>
        <SolidColorBrush x:Key="Theme1" Color="White" />
        <SolidColorBrush x:Key="Theme2" Color="Black" />
        <SolidColorBrush x:Key="Theme3" Color="Black" />
    </Window.Resources>

    <!-- Définition de la grille -->
    <Grid Background="{StaticResource Theme1}">
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            
            <!-- Définition des bordures et des titres-->
            <Border BorderBrush="{StaticResource Theme2}" BorderThickness="1,1,0,1" Grid.Column="0" Grid.RowSpan="3"/>
            <Border BorderBrush="{StaticResource Theme2}" BorderThickness="1,1,0,1" Grid.Column="1" Grid.RowSpan="3"/>
            <Border BorderBrush="{StaticResource Theme2}" BorderThickness="1,1,0,1" Grid.Column="2" Grid.RowSpan="3"/>
            <Border BorderBrush="{StaticResource Theme2}" BorderThickness="1,1,0,1" Grid.Column="3" Grid.RowSpan="3"/>
            <Border BorderBrush="{StaticResource Theme2}" BorderThickness="1" Grid.Column="4" Grid.RowSpan="3"/>

            <Label Foreground="{StaticResource Theme2}">Workforce Module</Label>
            <Label Foreground="{StaticResource Theme2}" Grid.Column="1">Orders Module</Label>
            <Label Foreground="{StaticResource Theme2}" Grid.Column="2">Statistics Module</Label>
            <Label Foreground="{StaticResource Theme2}" Grid.Column="3">Communication Module</Label>
            <Label Foreground="{StaticResource Theme2}" Grid.Column="4">Other Module</Label>
            
            <Border BorderBrush="{StaticResource Theme2}" Grid.Row="0" BorderThickness="0,0,0,1" Grid.ColumnSpan="5"/>
            
            <!-- Workforce Module -->
            
            <Grid Grid.Row="1" Margin="5,0,5,5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Border BorderBrush="{StaticResource Theme2}" BorderThickness="0,0,0,1" Margin="-4,0"/>
                <StackPanel Grid.Row="0" Visibility="Visible" Name="Panel1">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Background="{StaticResource Theme1}" Foreground="{StaticResource Theme2}" Text="Customers" Margin="5,3,0,0"/>
                        <ListBox Background="{StaticResource Theme1}" Foreground="{StaticResource Theme2}" Height="150" Width="85" Margin="5" x:Name="lstCustomer" SelectionMode="Single" SelectionChanged="SelectionChanged1"/>
                        <Button Background="{StaticResource Theme1}" Foreground="{StaticResource Theme3}"  Content="Add" Click="affCustomerClick" Margin="5" BorderBrush="LimeGreen" x:Name="Add1"/>
                    </StackPanel>
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Background="{StaticResource Theme1}" Foreground="{StaticResource Theme2}" Text="Clerks" Margin="5,3,0,0"/>
                        <ListBox Background="{StaticResource Theme1}" Foreground="{StaticResource Theme2}" Height="150" Width="85" Margin="5" x:Name="lstClerk" SelectionMode="Single" SelectionChanged="SelectionChanged2"/>
                        <Button Background="{StaticResource Theme1}" Foreground="{StaticResource Theme3}"  Content="Add" Click="affClerkClick" Margin="5" BorderBrush="LimeGreen" x:Name="Add2"/>
                    </StackPanel>
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Background="{StaticResource Theme1}" Foreground="{StaticResource Theme2}" Text="Deliverers" Margin="5,3,0,0"/>
                        <ListBox Background="{StaticResource Theme1}" Foreground="{StaticResource Theme2}" Height="150" Width="85" Margin="5" x:Name="lstDeliverer" SelectionMode="Single" SelectionChanged="SelectionChanged3"/>
                        <Button Background="{StaticResource Theme1}" Foreground="{StaticResource Theme3}"  Content="Add" Click="affDelivererClick" Margin="5" BorderBrush="LimeGreen" x:Name="Add3"/>
                    </StackPanel>
                </StackPanel>
                    <Button Background="{StaticResource Theme1}" Foreground="{StaticResource Theme3}"  Content="Modify" Click="affCustomerClick" Margin="5" BorderBrush="DarkOrange" Visibility="Collapsed" x:Name="Modify1" Width="200"/>
                    <Button Background="{StaticResource Theme1}" Foreground="{StaticResource Theme3}"  Content="Delete" Click="deleteCustomer" Margin="5" BorderBrush="Red" Visibility="Collapsed" x:Name="Delete1" Width="200"/>
                    <Button Background="{StaticResource Theme1}" Foreground="{StaticResource Theme3}"  Content="Modify" Click="affClerkClick" Margin="5" BorderBrush="DarkOrange" Visibility="Collapsed" x:Name="Modify2" Width="200"/>
                    <Button Background="{StaticResource Theme1}" Foreground="{StaticResource Theme3}"  Content="Delete" Click="deleteClerk" Margin="5" BorderBrush="Red" Visibility="Collapsed" x:Name="Delete2" Width="200"/>
                    <Button Background="{StaticResource Theme1}" Foreground="{StaticResource Theme3}"  Content="Modify" Click="affDelivererClick" Margin="5" BorderBrush="DarkOrange" Visibility="Collapsed" x:Name="Modify3" Width="200"/>
                    <Button Background="{StaticResource Theme1}" Foreground="{StaticResource Theme3}"  Content="Delete" Click="deleteDeliverer" Margin="5" BorderBrush="Red" Visibility="Collapsed" x:Name="Delete3" Width="200"/>
                    <Button Background="{StaticResource Theme1}" Foreground="{StaticResource Theme3}"  Content="Order by alphabetical order" Margin="5,15,5,5" Click="OrderAlpha" Width="200"/>
                    <Button Background="{StaticResource Theme1}" Foreground="{StaticResource Theme3}"  Content="Order by city" Margin="5" Click="OrderCity" Width="200"/>
                    <Button Background="{StaticResource Theme1}" Foreground="{StaticResource Theme3}"  Content="Order by most orders" Margin="5" Click="OrderByOrder" Width="200"/>
                    <Button Background="{StaticResource Theme1}" Foreground="{StaticResource Theme3}"  Content="Find a specific customer" Margin="5,15" Click="findCustomer" Width="200" BorderBrush="Goldenrod" Height="30"/>
                </StackPanel>
                
                <StackPanel Grid.Row="0" Name="Panel2" Visibility="Collapsed" Margin="0,0,0,5">
                    <TextBlock Background="{StaticResource Theme1}" Foreground="{StaticResource Theme2}" Text="Add a new customer" Margin="5,5,5,10" FontSize="15" x:Name="AddCustomerTitle" Visibility="Collapsed">
                        <TextBlock.TextDecorations>
                            <TextDecoration Location="Underline"/>
                        </TextBlock.TextDecorations>
                    </TextBlock>
                    <TextBlock Background="{StaticResource Theme1}" Foreground="{StaticResource Theme2}" Text="Modify a customer" Margin="5,5,5,10" FontSize="15" x:Name="ModifyCustomerTitle" Visibility="Collapsed">
                        <TextBlock.TextDecorations>
                            <TextDecoration Location="Underline"/>
                        </TextBlock.TextDecorations>
                    </TextBlock>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <TextBlock Background="{StaticResource Theme1}" Foreground="{StaticResource Theme2}" Text="Name*" Margin="5"/>
                        <TextBox Background="{StaticResource Theme1}" Foreground="{StaticResource Theme2}" Grid.Row="1" x:Name="nameCustomer" PreviewTextInput="NameValidationTextBox" Margin="5"/>
                        <TextBlock Background="{StaticResource Theme1}" Foreground="{StaticResource Theme2}" Grid.Column="1" Text="Surname*" Margin="5"/>
                        <TextBox Background="{StaticResource Theme1}" Foreground="{StaticResource Theme2}" Grid.Row="1" Grid.Column="1" x:Name="surnameCustomer" Margin="5"/>
                        <TextBlock Background="{StaticResource Theme1}" Foreground="{StaticResource Theme2}" Grid.Row="2" Text="Phone Number*" Margin="5"/>
                        <TextBox Background="{StaticResource Theme1}" Foreground="{StaticResource Theme2}" Grid.Row="3" Grid.ColumnSpan="2" x:Name="phoneCustomer" Margin="5" PreviewTextInput="NumberValidationTextBox"/>
                        <TextBlock Background="{StaticResource Theme1}" Foreground="{StaticResource Theme2}" Grid.Row="4" Text="Address" Margin="5">
                            <TextBlock.TextDecorations>
                                <TextDecoration Location="Underline"/>
                            </TextBlock.TextDecorations>
                        </TextBlock>
                        <TextBlock Background="{StaticResource Theme1}" Foreground="{StaticResource Theme2}" Grid.Row="5" Text="City*" Margin="5"/>
                        <TextBox Background="{StaticResource Theme1}" Foreground="{StaticResource Theme2}" Grid.Row="6" x:Name="cityCustomer" Margin="5"/>
                        <TextBlock Background="{StaticResource Theme1}" Foreground="{StaticResource Theme2}" Grid.Column="1" Grid.Row="5" Text="Postcode*" Margin="5"/>
                        <TextBox Background="{StaticResource Theme1}" Foreground="{StaticResource Theme2}" Grid.Row="6" Grid.Column="1" x:Name="postcodeCustomer" Margin="5" PreviewTextInput="NumberValidationTextBox"/>
                        <TextBlock Background="{StaticResource Theme1}" Foreground="{StaticResource Theme2}" Grid.Row="7" Text="Street*" Margin="5"/>
                        <TextBox Background="{StaticResource Theme1}" Foreground="{StaticResource Theme2}" Grid.Row="8" x:Name="streetCustomer" Margin="5"/>
                        <TextBlock Background="{StaticResource Theme1}" Foreground="{StaticResource Theme2}" Grid.Column="1" Grid.Row="7" Text="Street number*" Margin="5"/>
                        <TextBox Background="{StaticResource Theme1}" Foreground="{StaticResource Theme2}" Grid.Row="8" Grid.Column="1" x:Name="numberCustomer" Margin="5" PreviewTextInput="NumberValidationTextBox"/>
                        <TextBlock Background="{StaticResource Theme1}" Foreground="{StaticResource Theme2}" Grid.Row="9" Text="Floor" Margin="5"/>
                        <TextBox Background="{StaticResource Theme1}" Foreground="{StaticResource Theme2}" Grid.Row="10" x:Name="floorCustomer" Margin="5" PreviewTextInput="NumberValidationTextBox"/>
                        <TextBlock Background="{StaticResource Theme1}" Foreground="{StaticResource Theme2}" Grid.Column="1" Grid.Row="9" Text="Apartment" Margin="5"/>
                        <TextBox Background="{StaticResource Theme1}" Foreground="{StaticResource Theme2}" Grid.Row="10" Grid.Column="1" x:Name="apartmentCustomer" Margin="5"/>
                        <TextBlock Background="{StaticResource Theme1}" Foreground="{StaticResource Theme2}" Grid.Row="11" Text="All * field must be filled" Margin="5,15,5,5"/>
                        <Button Background="{StaticResource Theme1}" Foreground="{StaticResource Theme3}"  Grid.Row="12" Content="Add" Margin="10,5,10,20" BorderBrush="LimeGreen" Click="addCustomerClick" x:Name="addCustomerButton" Visibility="Collapsed"/>
                        <Button Background="{StaticResource Theme1}" Foreground="{StaticResource Theme3}"  Grid.Row="12" Content="Modify" Margin="10,5,10,20" BorderBrush="LimeGreen" Click="addCustomerClick" x:Name="modifyCustomerButton" Visibility="Collapsed"/>
                        <Button Background="{StaticResource Theme1}" Foreground="{StaticResource Theme3}"  Grid.Row="12" Grid.Column="1" Content="Cancel" Margin="10,5,10,20" BorderBrush="Red" Click="cancelClick"/>
                    </Grid>
                </StackPanel>
                
                <StackPanel Grid.Row="0" Name="Panel3" Visibility="Collapsed" Margin="0,0,0,5">
                    <TextBlock Background="{StaticResource Theme1}" Foreground="{StaticResource Theme2}" Text="Add a new clerk" Margin="5,5,5,10" FontSize="15" Visibility="Collapsed" x:Name="AddClerkTitle">
                        <TextBlock.TextDecorations>
                            <TextDecoration Location="Underline"/>
                        </TextBlock.TextDecorations>
                    </TextBlock>
                    <TextBlock Background="{StaticResource Theme1}" Foreground="{StaticResource Theme2}" Text="Modify a clerk" Margin="5,5,5,10" FontSize="15" Visibility="Collapsed" x:Name="ModifyClerkTitle">
                        <TextBlock.TextDecorations>
                            <TextDecoration Location="Underline"/>
                        </TextBlock.TextDecorations>
                    </TextBlock>
                    <TextBlock Background="{StaticResource Theme1}" Foreground="{StaticResource Theme2}" Text="Add a new deliverer" Margin="5,5,5,10" FontSize="15" Visibility="Collapsed" x:Name="AddDelivererTitle">
                        <TextBlock.TextDecorations>
                            <TextDecoration Location="Underline"/>
                        </TextBlock.TextDecorations>
                    </TextBlock>
                    <TextBlock Background="{StaticResource Theme1}" Foreground="{StaticResource Theme2}" Text="Modify a deliverer" Margin="5,5,5,10" FontSize="15" Visibility="Collapsed" x:Name="ModifyDelivererTitle">
                        <TextBlock.TextDecorations>
                            <TextDecoration Location="Underline"/>
                        </TextBlock.TextDecorations>
                    </TextBlock>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <TextBlock Background="{StaticResource Theme1}" Foreground="{StaticResource Theme2}" Text="Name" Margin="5"/>
                        <TextBox Background="{StaticResource Theme1}" Foreground="{StaticResource Theme2}" Grid.Row="1" x:Name="name" Margin="5"/>
                        <TextBlock Background="{StaticResource Theme1}" Foreground="{StaticResource Theme2}" Grid.Column="1" Text="Surname" Margin="5"/>
                        <TextBox Background="{StaticResource Theme1}" Foreground="{StaticResource Theme2}" Grid.Row="1" Grid.Column="1" x:Name="surname" Margin="5"/>
                        <Button Background="{StaticResource Theme1}" Foreground="{StaticResource Theme3}"  Grid.Row="2" Content="Add" BorderBrush="LimeGreen" Margin="10,5,10,20" Click="addClerkClick" x:Name="addClerkButton" Visibility="Collapsed"/>
                        <Button Background="{StaticResource Theme1}" Foreground="{StaticResource Theme3}"  Grid.Row="2" Content="Modify" BorderBrush="LimeGreen" Margin="10,5,10,20" Click="addClerkClick" x:Name="modifyClerkButton" Visibility="Collapsed"/>
                        <Button Background="{StaticResource Theme1}" Foreground="{StaticResource Theme3}"  Grid.Row="2" Content="Add" BorderBrush="LimeGreen" Margin="10,5,10,20" Click="addDelivererClick" x:Name="addDelivererButton" Visibility="Collapsed"/>
                        <Button Background="{StaticResource Theme1}" Foreground="{StaticResource Theme3}"  Grid.Row="2" Content="Modify" BorderBrush="LimeGreen" Margin="10,5,10,20" Click="addDelivererClick" x:Name="modifyDelivererButton" Visibility="Collapsed"/>
                        <Button Background="{StaticResource Theme1}" Foreground="{StaticResource Theme3}"  Grid.Row="2" Grid.Column="1" Content="Cancel" BorderBrush="Red" Margin="10,5,10,20" Click="cancelClick"/>
                    </Grid>
                </StackPanel>
                
                <StackPanel Grid.Row="0" Name="findCustomerPanel" Visibility="Collapsed" Margin="0,0,0,5">
                    <TextBlock Background="{StaticResource Theme1}" Foreground="{StaticResource Theme2}" Text="Find a customer" Margin="5,5,5,10" FontSize="15">
                        <TextBlock.TextDecorations>
                            <TextDecoration Location="Underline"/>
                        </TextBlock.TextDecorations>
                    </TextBlock>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                    
                        <TextBlock Background="{StaticResource Theme1}" Foreground="{StaticResource Theme2}" Text="Enter a phone number:" Margin="5"/>
                        <TextBox Background="{StaticResource Theme1}" Foreground="{StaticResource Theme2}" Grid.Row="1" Grid.ColumnSpan="2" x:Name="phoneFindCustomer" Margin="5" PreviewTextInput="NumberValidationTextBox"/>
                        <Button Background="{StaticResource Theme1}" Foreground="{StaticResource Theme3}"  Grid.Row="2" Content="Find" Margin="10,15" Click="findCustomerClick"/>
                        <Button Background="{StaticResource Theme1}" Foreground="{StaticResource Theme3}"  Grid.Row="2" Grid.Column="1" Content="Close" Margin="10,15" Click="cancelClick"/>
                        <TextBlock Background="{StaticResource Theme1}" Grid.Row="3" Text="No customer was found" Visibility="Collapsed" x:Name="noMatch" Foreground="Red" Margin="5,0,5,15"/>
                    </Grid>
                </StackPanel>
                
                <StackPanel Grid.Row="1" Name="InfoPanel" Visibility="Collapsed" Margin="0,0,0,5">
                    <TextBlock Background="{StaticResource Theme1}" Foreground="{StaticResource Theme2}" Text="Informations" Margin="5,5,5,10" FontSize="15">
                        <TextBlock.TextDecorations>
                            <TextDecoration Location="Underline"/>
                        </TextBlock.TextDecorations>
                    </TextBlock>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <TextBlock Background="{StaticResource Theme1}" Foreground="{StaticResource Theme2}" x:Name="NameInfo" Margin="5"/>
                        <TextBlock Background="{StaticResource Theme1}" Foreground="{StaticResource Theme2}" Grid.Column="1" x:Name="SurnameInfo" Margin="5"/>
                        <TextBlock Background="{StaticResource Theme1}" Foreground="{StaticResource Theme2}" Grid.Row="1" Grid.ColumnSpan="2" x:Name="PhoneInfo" Margin="5"/>
                        <TextBlock Background="{StaticResource Theme1}" Foreground="{StaticResource Theme2}" Grid.Row="1" x:Name="IdInfo" Margin="5" Visibility="Collapsed"/>
                        <TextBlock Background="{StaticResource Theme1}" Foreground="{StaticResource Theme2}" Grid.Row="2" x:Name="FirstOrderInfo" Margin="5"/>
                        <TextBlock Background="{StaticResource Theme1}" Foreground="{StaticResource Theme2}" Grid.Row="2" Grid.Column="1" x:Name="NumOrderInfo" Margin="5"/>
                        <TextBlock Background="{StaticResource Theme1}" Foreground="{StaticResource Theme2}" Grid.Row="3" Text="Address Info:" Margin="5" Visibility="Collapsed" x:Name="AddressInfo">
                            <TextBlock.TextDecorations>
                                <TextDecoration Location="Underline"/>
                            </TextBlock.TextDecorations>
                        </TextBlock>
                        <TextBlock Background="{StaticResource Theme1}" Foreground="{StaticResource Theme2}" Grid.Row="4" x:Name="CityInfo" Margin="5"/>
                        <TextBlock Background="{StaticResource Theme1}" Foreground="{StaticResource Theme2}" Grid.Row="4" Grid.Column="1" x:Name="PostcodeInfo" Margin="5"/>
                        <TextBlock Background="{StaticResource Theme1}" Foreground="{StaticResource Theme2}" Grid.Row="5" x:Name="StreetInfo" Margin="5"/>
                        <TextBlock Background="{StaticResource Theme1}" Foreground="{StaticResource Theme2}" Grid.Row="5" Grid.Column="1" x:Name="NumberInfo" Margin="5"/>
                        <TextBlock Background="{StaticResource Theme1}" Foreground="{StaticResource Theme2}" Grid.Row="6" x:Name="FloorInfo" Margin="5"/>
                        <TextBlock Background="{StaticResource Theme1}" Foreground="{StaticResource Theme2}" Grid.Row="6" Grid.Column="1" x:Name="ApartmentInfo" Margin="5"/>
                    </Grid>
                </StackPanel>
            </Grid>
            
            <!--Orders Module-->
            
            <Grid Grid.Row="1" Grid.Column="1" x:Name="OrderListPanel" Margin="5,0,5,5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
            
                <StackPanel Margin="0,5">
                    <TextBlock Background="{StaticResource Theme1}" Foreground="{StaticResource Theme2}" Text="List of orders in waiting" FontSize="15" Margin="5,0">
                        <TextBlock.TextDecorations>
                            <TextDecoration Location="Underline"/>
                        </TextBlock.TextDecorations>
                    </TextBlock>
                    <ListBox Background="{StaticResource Theme1}" Foreground="{StaticResource Theme2}" Height="150" Margin="10" SelectionMode="Single" x:Name="CurrentOrderList" SelectionChanged="SelectionChanged"/>
                    <Button Background="{StaticResource Theme1}" Foreground="{StaticResource Theme3}"  Content="Modify" Width="200" BorderBrush="Goldenrod" Margin="0,5" x:Name="ModifyButton" Click="AddOrder" Visibility="Collapsed"/>
                    <Button Background="{StaticResource Theme1}" Foreground="{StaticResource Theme3}"  Content="At loss" Width="200" BorderBrush="Red" Margin="0,5" x:Name="LossButton1" Click="LossOrder" Visibility="Collapsed"/>
                    <Button Background="{StaticResource Theme1}" Foreground="{StaticResource Theme3}"  Content="Add an order" Width="200" BorderBrush="LimeGreen" Margin="0,10,0,20" Click="AddOrder"/>
                    
                    <TextBlock Background="{StaticResource Theme1}" Foreground="{StaticResource Theme2}" Text="Order being prepared" x:Name="PrepareOrder" FontSize="15" Margin="5,0" Visibility="Collapsed">
                        <TextBlock.TextDecorations>
                            <TextDecoration Location="Underline"/>
                        </TextBlock.TextDecorations>
                    </TextBlock>
                    <ListBox Background="{StaticResource Theme1}" Foreground="{StaticResource Theme2}" Margin="10" SelectionMode="Single" x:Name="PrepareOrderList" SelectionChanged="SelectionChanged" Visibility="Collapsed"/>
                    <Button Background="{StaticResource Theme1}" Foreground="{StaticResource Theme3}"  Content="At loss" Width="200" BorderBrush="Red" Margin="0,15,0,25" x:Name="LossButton0" Click="LossOrder" Visibility="Collapsed"/>
                    <StackPanel x:Name="LossText" Margin="0,15,0,25" Visibility="Collapsed" HorizontalAlignment="Center">
                        <TextBlock Background="{StaticResource Theme1}" Text="Order already lost, will be added to closed orders" Foreground="Red"/>
                        <TextBlock Background="{StaticResource Theme1}" Text="when the kitchen is done preparing" Foreground="Red"/>
                    </StackPanel>
                </StackPanel>
                <Border BorderBrush="{StaticResource Theme2}" BorderThickness="0,0,0,1" Margin="15,0"/>
                
                <StackPanel Margin="0,5" Grid.Row="1">
                    <TextBlock Background="{StaticResource Theme1}" Foreground="{StaticResource Theme2}" Text="List of orders waiting to be delivered" FontSize="15" Margin="5,0">
                        <TextBlock.TextDecorations>
                            <TextDecoration Location="Underline"/>
                        </TextBlock.TextDecorations>
                    </TextBlock>
                    <ListBox Background="{StaticResource Theme1}" Foreground="{StaticResource Theme2}" Height="150" Margin="10" SelectionMode="Single" x:Name="DeliveryOrderList" SelectionChanged="SelectionChanged"/>
                    <Button Background="{StaticResource Theme1}" Foreground="{StaticResource Theme3}"  Content="At loss" Width="200" BorderBrush="Red" Margin="0,5" x:Name="LossButton2" Click="LossOrder" Visibility="Collapsed"/>
                    
                    <TextBlock Background="{StaticResource Theme1}" Foreground="{StaticResource Theme2}" Text="List of orders in delivery" FontSize="15" Margin="5,0" x:Name="CurrentDeliveryOrderListLabel" Visibility="Collapsed">
                        <TextBlock.TextDecorations>
                            <TextDecoration Location="Underline"/>
                        </TextBlock.TextDecorations>
                    </TextBlock>
                    <ListBox Background="{StaticResource Theme1}" Foreground="{StaticResource Theme2}" MaxHeight="100" Margin="10" SelectionMode="Single" x:Name="CurrentDeliveryOrderList" SelectionChanged="SelectionChanged" Visibility="Collapsed"/>
                    <Button Background="{StaticResource Theme1}" Foreground="{StaticResource Theme3}"  Content="At loss" Width="200" BorderBrush="Red" Margin="0,5" x:Name="LossButton3" Click="LossOrder" Visibility="Collapsed"/>
                    <StackPanel x:Name="LossText2" Margin="0,15,0,25" Visibility="Collapsed" HorizontalAlignment="Center">
                        <TextBlock Background="{StaticResource Theme1}" Text="Order already lost, will be added to closed orders" Foreground="Red"/>
                        <TextBlock Background="{StaticResource Theme1}" Text="when the kitchen is done preparing" Foreground="Red"/>
                    </StackPanel>
                </StackPanel>
                <Border BorderBrush="{StaticResource Theme2}" Grid.Row="1" BorderThickness="0,0,0,1" Margin="15,0"/>
                
                <StackPanel Margin="0,5" Grid.Row="2">
                    <TextBlock Background="{StaticResource Theme1}" Foreground="{StaticResource Theme2}" Text="List of closed orders" FontSize="15" Margin="5,15,5,0">
                        <TextBlock.TextDecorations>
                            <TextDecoration Location="Underline"/>
                        </TextBlock.TextDecorations>
                    </TextBlock>
                    <ListBox Background="{StaticResource Theme1}" Foreground="{StaticResource Theme2}" Height="150" Margin="10" SelectionMode="Single" x:Name="PastOrderList" SelectionChanged="SelectionChanged"/>
                </StackPanel>
            </Grid>
            
            <StackPanel Grid.Row="1" Grid.Column="1" x:Name="OrderPanel" Visibility="Collapsed">
                <TextBlock Background="{StaticResource Theme1}" Foreground="{StaticResource Theme2}" Text="Place an order" Margin="5,5,5,10" FontSize="15">
                    <TextBlock.TextDecorations>
                        <TextDecoration Location="Underline"/>
                    </TextBlock.TextDecorations>
                </TextBlock>
                
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Background="{StaticResource Theme1}" Foreground="{StaticResource Theme2}" Text="Customer Phone Number:" Margin="5,0"/>
                    <TextBox Background="{StaticResource Theme1}" Foreground="{StaticResource Theme2}" Grid.Row="1" x:Name="phoneOrder" Margin="5" PreviewTextInput="NumberValidationTextBox"/>
                    <TextBlock Background="{StaticResource Theme1}" Foreground="{StaticResource Theme2}" Grid.Row="2" Text="Clerk Number:" Margin="5"/>
                    <TextBox Background="{StaticResource Theme1}" Foreground="{StaticResource Theme2}" Grid.Row="3" x:Name="orderClerk"  Margin="5,5,5,10" PreviewTextInput="NumberValidationTextBox"/>
                    <TextBlock Background="{StaticResource Theme1}" Foreground="{StaticResource Theme2}" Grid.Row="4" Margin="5,15,5,5" Text="Add pizza(s)"/>
                    <Border BorderBrush="{StaticResource Theme2}" Grid.Row="4" Margin="0,5,0,0" BorderThickness="0,1,0,0"/>
                    <Grid Grid.Row="5">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <ComboBox Background="{StaticResource Theme1}" Foreground="{StaticResource Theme2}" x:Name="PizzaList" Margin="5">
                            <ComboBoxItem Content="Choose the type" IsSelected="True" Visibility="Collapsed"  x:Name="default1"/>
                            <ComboBoxItem Content="Margherita"/>
                            <ComboBoxItem Content="Pepperoni"/>
                            <ComboBoxItem Content="Regina"/>
                            <ComboBoxItem Content="Napoletana"/>
                            <ComboBoxItem Content="Calzone"/>
                            <ComboBoxItem Content="Hawaiian"/>
                            <ComboBoxItem Content="Vegetarian"/>
                            <ComboBoxItem Content="Vegan"/>
                            <ComboBoxItem Content="Sicilian"/>
                            <ComboBoxItem Content="Tartiflette"/>
                            <ComboBoxItem Content="Chorizo"/>
                            <ComboBoxItem Content="Salmon"/>
                        </ComboBox>
                        
                        <ComboBox Background="{StaticResource Theme1}" Foreground="{StaticResource Theme2}" Grid.Column="1" x:Name="PizzaSizeList" Margin="5">
                            <ComboBoxItem Content="Choose the size" IsSelected="true" Visibility="Collapsed" x:Name="default2"/>
                            <ComboBoxItem Content="Small"/>
                            <ComboBoxItem Content="Medium"/>
                            <ComboBoxItem Content="Large"/>
                        </ComboBox>
                        
                        <Button Background="{StaticResource Theme1}" Foreground="{StaticResource Theme3}"  Grid.Row="1" Grid.ColumnSpan="2" Width="100" BorderBrush="LimeGreen" Content="Add" Margin="5,5,5,10" Click="AddPizza"/>
                    </Grid>
                    
                    <TextBlock Background="{StaticResource Theme1}" Foreground="{StaticResource Theme2}" Grid.Row="6" Text="List of pizzas:" Margin="5" Visibility="Collapsed" x:Name="PizzaOrderListLabel"/>
                    <ListBox Background="{StaticResource Theme1}" Foreground="{StaticResource Theme2}" Grid.Row="7" x:Name="PizzaOrderList" Margin="5" Visibility="Collapsed" MaxHeight="100" SelectionMode="Single" SelectionChanged="SelectionChanged"/>
                    <Button Background="{StaticResource Theme1}" Foreground="{StaticResource Theme3}"  Grid.Row="8" x:Name="DeletePizza" Margin="5" Content="Delete" Visibility="Collapsed" Click="DeletePizzaClick" BorderBrush="Red"/>
                    <TextBlock Background="{StaticResource Theme1}" Foreground="{StaticResource Theme2}" Grid.Row="9" Text="Add drink(s) (optional)" Margin="5,15,5,5"/>
                    <Border BorderBrush="{StaticResource Theme2}" Grid.Row="9" Margin="0,5,0,0" BorderThickness="0,1,0,0"/>
                    <Grid Grid.Row="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <ComboBox Background="{StaticResource Theme1}" Foreground="{StaticResource Theme2}" x:Name="DrinkList" Margin="5">
                            <ComboBoxItem Content="Choose the type" IsSelected="True" Visibility="Collapsed" x:Name="default3"/>
                            <ComboBoxItem Content="Coke"/>
                            <ComboBoxItem Content="Fanta"/>
                            <ComboBoxItem Content="Sprite"/>
                            <ComboBoxItem Content="Orangina"/>
                            <ComboBoxItem Content="IceTea"/>
                            <ComboBoxItem Content="Water"/>
                        </ComboBox>
                        
                        <ComboBox Background="{StaticResource Theme1}" Foreground="{StaticResource Theme2}" Grid.Column="1" x:Name="DrinkSizeList" Margin="5">
                            <ComboBoxItem Content="Choose the size" IsSelected="true" Visibility="Collapsed" x:Name="default4"/>
                            <ComboBoxItem Content="Can"/>
                            <ComboBoxItem Content="Bottle"/>
                        </ComboBox>
                        
                        <Button Background="{StaticResource Theme1}" Foreground="{StaticResource Theme3}"  Grid.Row="1" Grid.ColumnSpan="2" Width="100" BorderBrush="LimeGreen" Content="Add" Margin="5" Click="AddDrink"/>
                    </Grid>
                    <TextBlock Background="{StaticResource Theme1}" Foreground="{StaticResource Theme2}" Grid.Row="11" Text="List of drinks:" Margin="5" Visibility="Collapsed" x:Name="DrinkOrderListLabel"/>
                    <ListBox Background="{StaticResource Theme1}" Foreground="{StaticResource Theme2}" Grid.Row="12" x:Name="DrinkOrderList" Margin="5,5,5,0" Visibility="Collapsed" MaxHeight="100" SelectionMode="Single" SelectionChanged="SelectionChanged"/>
                    <Button Background="{StaticResource Theme1}" Foreground="{StaticResource Theme3}"  Grid.Row="13" x:Name="DeleteDrink" Margin="5,10,5,0" Content="Delete" Visibility="Collapsed" Click="DeleteDrinkClick" BorderBrush="Red"/>
                    <Border BorderBrush="{StaticResource Theme2}" Grid.Row="14" Margin="0,10" BorderThickness="0,1,0,0"/>
                    <Button Background="{StaticResource Theme1}" Foreground="{StaticResource Theme3}"  Grid.Row="14" Width="200" BorderBrush="LimeGreen" Content="Place Order" Margin="5,25,5,10" Click="PlaceOrder" Visibility="Collapsed" x:Name="PlaceOrderButton"/>
                    <Button Background="{StaticResource Theme1}" Foreground="{StaticResource Theme3}"  Grid.Row="14" Width="200" BorderBrush="LimeGreen" Content="Modify" Margin="5,25,5,10" Click="PlaceOrder" Visibility="Collapsed" x:Name="ModifyOrderButton"/>
                    <Button Background="{StaticResource Theme1}" Foreground="{StaticResource Theme3}"  Grid.Row="15" Width="200" BorderBrush="Red" Content="Cancel" Margin="5,0,5,10" Click="CancelOrder"/>
                    <Button Background="{StaticResource Theme1}" Foreground="{StaticResource Theme3}"  Grid.Row="16" Width="200" Height="30" BorderBrush="Goldenrod" Content="Load a file" Margin="5,5,5,20" Click="BrowseButton"/>
                </Grid>
            </StackPanel>
            
            <!--Statistics Module-->
            
            <StackPanel Grid.Row="1" Grid.Column="2" Margin="5" x:Name="StatsPanel">
                <TextBlock Background="{StaticResource Theme1}" Foreground="{StaticResource Theme2}" x:Name="listStatsLabel" Text="No statisctics selected" Margin="5,0,5,10" FontSize="15">
                    <TextBlock.TextDecorations>
                        <TextDecoration Location="Underline"/>
                    </TextBlock.TextDecorations>
                </TextBlock>
                <TextBlock Background="{StaticResource Theme1}" Foreground="{StaticResource Theme2}" x:Name="DateRange" Visibility="Collapsed" Margin="10,0,10,10"/>
                <ListBox Background="{StaticResource Theme1}" Foreground="{StaticResource Theme2}" x:Name="listStats" Margin="10,0,10,15" Visibility="Collapsed"/>
                <TextBlock Background="{StaticResource Theme1}" Foreground="{StaticResource Theme2}" x:Name="AveragePrice" Visibility="Collapsed" Margin="10,0,10,10"/>
                
                <Button Background="{StaticResource Theme1}" Foreground="{StaticResource Theme3}"  Content="Orders by clerk" Width="200" Margin="0,5" Click="OrdersByClerk"/>
                <Button Background="{StaticResource Theme1}" Foreground="{StaticResource Theme3}"  Content="Deliveries by deliverer" Width="200" Margin="0,5" Click="OrdersByDeliverer"/>
                <Button Background="{StaticResource Theme1}" Foreground="{StaticResource Theme3}"  Content="Average order price" Width="200" Margin="0,5" Click="AverageOrderPrice"/>
                <Button Background="{StaticResource Theme1}" Foreground="{StaticResource Theme3}"  Content="Order by time period" Width="200" Margin="0,5" Click="OrdersByTime"/>
                <Button Background="{StaticResource Theme1}" Foreground="{StaticResource Theme3}"  Content="Average Accounts Receivable" Width="200" Margin="0,5" Click="AverageAccounts"/>
                <StackPanel x:Name="Calendar" Margin="30,20" Visibility="Collapsed">
                    <TextBlock Background="{StaticResource Theme1}" Foreground="{StaticResource Theme2}" x:Name="CalendarText">
                        <TextBlock.TextDecorations>
                            <TextDecoration Location="Underline"/>
                        </TextBlock.TextDecorations>
                    </TextBlock>
                    <TextBlock Background="{StaticResource Theme1}" Foreground="{StaticResource Theme2}" x:Name="StartingDate" Visibility="Collapsed" Margin="0,5"/>
                    <Calendar Margin="10" x:Name="ActualCalendar" SelectedDatesChanged="Calendar_SelectedDatesChanged"/>
                    <Button Foreground="{StaticResource Theme2}" x:Name="CalendarSave1" Content="Save" Width="100" BorderBrush="LimeGreen" Background="{StaticResource Theme1}" Click="SaveCalendar1" Visibility="Collapsed">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="5"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                    <Button Foreground="{StaticResource Theme2}" x:Name="CalendarSave2" Content="Save" Width="100" BorderBrush="LimeGreen" Background="{StaticResource Theme1}" Click="SaveCalendar2" Visibility="Collapsed">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="5"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                </StackPanel>
            </StackPanel>
            
            <!--Communication Module-->
            
            <StackPanel Grid.Row="1" Grid.Column="3" Margin="5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Background="{StaticResource Theme1}" Foreground="{StaticResource Theme2}" Text="Kitchen" FontSize="15" Margin="5,0">
                        <TextBlock.TextDecorations>
                            <TextDecoration Location="Underline"/>
                        </TextBlock.TextDecorations>
                    </TextBlock>
                    <TextBlock Background="{StaticResource Theme1}" Foreground="{StaticResource Theme2}" Grid.Row="1" x:Name="WaitingKitchen" Text="The kitchen is waiting for an order" Margin="10" Visibility="Visible"/>
                    <TextBlock Background="{StaticResource Theme1}" Foreground="{StaticResource Theme2}" Grid.Row="1" x:Name="OrderCooked" Margin="10,10,10,5" Visibility="Collapsed"/>
                    <TextBlock Background="{StaticResource Theme1}" Foreground="{StaticResource Theme2}" Grid.Row="2" x:Name="TimeLeft" Margin="10,5" Visibility="Collapsed"/>
                    <Border BorderBrush="{StaticResource Theme2}" Grid.Row="3" BorderThickness="0,0,0,1" Margin="10,5"/>
                </Grid>
                
                <TextBlock Background="{StaticResource Theme1}" Foreground="{StaticResource Theme2}" Text="Kitchen's Messages" FontSize="15" Margin="5,0">
                    <TextBlock.TextDecorations>
                        <TextDecoration Location="Underline"/>
                    </TextBlock.TextDecorations>
                </TextBlock>
                <ListBox Background="{StaticResource Theme1}" Foreground="{StaticResource Theme2}" x:Name="KitchenMessages" Margin="10" SelectionMode="Single">
                    <ListBox.Items>
                        <TextBlock Background="{StaticResource Theme1}" Foreground="{StaticResource Theme2}" Text="No messages for the moment"/>
                    </ListBox.Items>
                </ListBox>
                <TextBlock Background="{StaticResource Theme1}" Foreground="{StaticResource Theme2}" Text="Clerks' Messages" FontSize="15" Margin="5,0">
                    <TextBlock.TextDecorations>
                        <TextDecoration Location="Underline"/>
                    </TextBlock.TextDecorations>
                </TextBlock>
                <ListBox Background="{StaticResource Theme1}" Foreground="{StaticResource Theme2}" x:Name="ClerkMessages" Margin="10" SelectionMode="Single">
                    <ListBox.Items>
                        <TextBlock Background="{StaticResource Theme1}" Foreground="{StaticResource Theme2}" Text="No messages for the moment"/>
                    </ListBox.Items>
                </ListBox>
                <TextBlock Background="{StaticResource Theme1}" Foreground="{StaticResource Theme2}" Text="Deliverers' Messages" FontSize="15" Margin="5,0">
                    <TextBlock.TextDecorations>
                        <TextDecoration Location="Underline"/>
                    </TextBlock.TextDecorations>
                </TextBlock>
                <ListBox Background="{StaticResource Theme1}" Foreground="{StaticResource Theme2}" x:Name="DelivererMessages" Margin="10" SelectionMode="Single">
                    <ListBox.Items>
                        <TextBlock Background="{StaticResource Theme1}" Foreground="{StaticResource Theme2}" Text="No messages for the moment"/>
                    </ListBox.Items>
                </ListBox>
                <TextBlock Background="{StaticResource Theme1}" Foreground="{StaticResource Theme2}" Text="Customers' Messages" FontSize="15" Margin="5,0">
                    <TextBlock.TextDecorations>
                        <TextDecoration Location="Underline"/>
                    </TextBlock.TextDecorations>
                </TextBlock>
                <ListBox Background="{StaticResource Theme1}" Foreground="{StaticResource Theme2}" x:Name="CustomerMessages" Margin="10" SelectionMode="Single">
                    <ListBox.Items>
                        <TextBlock Background="{StaticResource Theme1}" Foreground="{StaticResource Theme2}" Text="No messages for the moment"/>
                    </ListBox.Items>
                </ListBox>
            </StackPanel>
            
            <!--Other Module-->
            
            <StackPanel Grid.Column="4" Grid.Row="1" Margin="5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <StackPanel>
                        <TextBlock Background="{StaticResource Theme1}" Foreground="{StaticResource Theme2}" Text="Load and Save Scenarios" FontSize="15" Margin="5,0,5,15">
                            <TextBlock.TextDecorations>
                                <TextDecoration Location="Underline"/>
                            </TextBlock.TextDecorations>
                        </TextBlock>
                        <Button Background="{StaticResource Theme1}" Foreground="{StaticResource Theme3}"  Content="Save this scenario in a JSON file" Width="200" Margin="0,5,0,15" Height="38" Click="GenerateFile"/>
                        <Button Background="{StaticResource Theme1}" Foreground="{StaticResource Theme3}"  Content="Load a JSON file with a scenario" Width="200" Margin="0,5" Height="38" Click="LoadFile"/>
                    </StackPanel>
                    <Border BorderBrush="{StaticResource Theme2}" Grid.Row="1" BorderThickness="0,0,0,1" Margin="15"/>
                </Grid>
                <TextBlock Background="{StaticResource Theme1}" Foreground="{StaticResource Theme2}" Text="Switch Theme" FontSize="15" Margin="5,0,5,15">
                    <TextBlock.TextDecorations>
                        <TextDecoration Location="Underline"/>
                    </TextBlock.TextDecorations>
                </TextBlock>
                <Button Background="{StaticResource Theme1}" Foreground="{StaticResource Theme3}"  Content="Switch to Dark Theme" Width="200" Margin="0,5,0,15" Height="38" x:Name="switchButton" Click="switchTheme"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>


